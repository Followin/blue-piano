@import "../../styles/_colors.styl"

label
    padding-left 24px
    padding-right 8px
    position: relative
    cursor pointer

    &:before, &:after
        content ''
        position absolute
        display block
        border-radius 50%

    &:before
        left 0
        top 0
        width 16px
        height 16px
        border 2px solid $secondary-text-color
        transition border-color .1s ease-in

    &:after
        left 10px
        top 10px
        width 0
        height 0
        background: $primary-color
        transition all .1s ease-in

input
    display none

    &:checked
        & + label:after
            width 12px
            height 12px
            left 4px
            top 4px
        & + label:before
            border-color: $primary-color
